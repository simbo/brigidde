@require 'global-vars'
@require './../terminal.vars'

:host
  display: block
  position: absolute
  bottom: 0
  left: 0
  width: 100%
  height: $terminal.statusBar.height

.terminal-status-bar
  display: flex
  height: 100%
  background: $colors.statusBarBg
  color: $colors.statusBarText
  font-size: $fontSize.tiny

  &__item
    padding: 0 .5em
    line-height: $terminal.statusBar.height
